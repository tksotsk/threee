
<div class="field">
<h1><%= @user.name %>さんのプロジェクト　リスト</h1>
<%= link_to 'みんなのプロジェクトリスト', projects_path %>
<table class="field">
  <thead>
    <tr>
      <th>タイトル</th>
      <th colspan="3"></th>
      <th>作成日時</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        
        <td>
          <% if Favorite.exists?(user_id: current_user.id, project_id: project.id) %>
            <%= render 'projects/non_favorite', {project: project} %>
          <% else %>
            <%= render 'projects/favorite', {project: project} %>
          <% end %>
        </td>
        <td>
        <% if project.themes.count==0 %>
          <%= link_to project.title, new_project_path %>
        <% else %>
          <%= link_to project.title, three_path(@user.id, project.themes.order(created_at: :desc).first.id) %>
        <% end %>
        </td>
        <td><%= project.themes.length %></td>
        <td><%= project.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H:%M:%S") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to '新規作成', new_project_path %>

</div>