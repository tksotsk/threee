
<div class="field">
<h1><%= @user.name %>さんのプロジェクト　リスト</h1>
<%= link_to 'みんなのプロジェクトリスト', projects_path %>
<table class="field">
  <thead>
    <tr>
      <th>タイトル</th>
      <th colspan="3"></th>
      <th>作成日時</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <% if project.themes.count==0 %>
          <td><%= link_to project.title, new_project_path %></td>
        <% else %>
          <td><%= link_to project.title, three_path(@user.id, project.themes.order(created_at: :desc).first.id) %></td>
        <% end %>
        <td><%= project.themes.length %></td>
        <td><%= link_to '名前を編集する', edit_project_path(project) %></td>
        <td><%= link_to '削除する', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= project.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H:%M:%S") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to '新規作成', new_project_path %>

</div>