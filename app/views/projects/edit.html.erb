
<div class="field">
<h1>Projects</h1>
<%= link_to 'みんなのプロジェクトリスト', projects_path %>
<%= form_with(model: @project) do |form| %>

<table class="field">
  <thead>
    <tr>
      <th class="col-8">タイトル</th>
      <th class="col-1"></th>
      <th></th>
      <th></th>
      <th>作成日時</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <% if @project.id==project.id %>
          <div class="field">
            <td>
            <h3><%= form.text_field :title, class: "theme_field" %></h3>
            </td>
            <td>
            <p><%= form.submit %></p>
            </td>
            <td>
            <p><%= link_to '削除する', project, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            </td>
          </div>
        <% else %>
          <td>
          <h3 style="color: #bbb;">
              <%= project.title %>
          </h3>
          </td>
          <td>
          <p><%= link_to '名前を編集する', edit_project_path(project) %></p>
          </td>
          <td>
          <p><%= link_to '削除する', project, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          </td>
        <% end %>
        <td><%= link_to '履歴', project_themes_path(project) %></td>
        <td><%= project.themes.length %></td>
        <td><%= project.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H:%M:%S") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Project', new_project_path %>

</div>


